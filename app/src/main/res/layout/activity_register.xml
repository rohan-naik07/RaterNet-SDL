<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginTop="30sp"
    android:layout_marginBottom="30sp"
    android:gravity="center"
    android:orientation="vertical"
    android:weightSum="150"
    tools:context=".RegisterActivity">

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/ProfilePic"
        android:layout_width="match_parent"
        android:layout_height="0sp"
        android:layout_margin="5sp"
        android:layout_weight="90"
        android:src="@drawable/img" />

    <androidx.appcompat.widget.AppCompatTextView
        android:layout_width="wrap_content"
        android:layout_height="0sp"
        android:layout_gravity="center"
        android:gravity="center"
        android:layout_weight="25"
        android:paddingHorizontal="5sp"
        android:text="@string/upload_pro_pic"
        android:textAlignment="center"
        android:textSize="10sp" />

    <!--    <androidx.core.widget.NestedScrollView-->
    <!--        style="@style/NestedScrollBarStyle"-->
    <!--        android:layout_width="match_parent"-->
    <!--        android:layout_height="0dp"-->
    <!--        android:layout_weight="60">-->

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_weight="30"
        android:gravity="center"
        android:orientation="vertical">

        <androidx.appcompat.widget.AppCompatEditText
            android:id="@+id/edtRegEmailId"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:background="@drawable/btn_rounded3"
            android:padding="10dp"
            android:layout_marginHorizontal="40sp"
            android:layout_marginTop="20sp"
            android:hint="@string/enter_email"
            android:inputType="textEmailAddress" />

        <androidx.appcompat.widget.AppCompatEditText
            android:id="@+id/edtRegName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:background="@drawable/btn_rounded3"
            android:padding="10dp"
            android:layout_marginHorizontal="40sp"
            android:layout_marginTop="10sp"
            android:hint="@string/enter_name"
            android:inputType="textPersonName" />

        <androidx.appcompat.widget.AppCompatEditText
            android:id="@+id/edtRegPhoneNumber"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:background="@drawable/btn_rounded3"
            android:padding="10dp"
            android:layout_marginHorizontal="40sp"
            android:layout_marginTop="10sp"
            android:hint="@string/enter_phno"
            android:inputType="phone" />

        <androidx.appcompat.widget.AppCompatEditText
            android:id="@+id/edtRegPass"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:background="@drawable/btn_rounded3"
            android:padding="10dp"
            android:layout_marginHorizontal="40sp"
            android:layout_marginTop="10sp"
            android:hint="@string/enter_pass"
            android:inputType="textPassword" />

        <androidx.appcompat.widget.AppCompatEditText
            android:id="@+id/edtRegVerifyPass"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginHorizontal="40sp"
            android:layout_marginTop="10sp"
            android:background="@drawable/btn_rounded3"
            android:padding="10dp"
            android:hint="@string/verify_pass"
            android:inputType="textPassword" />

    </LinearLayout>
    <!--    </androidx.core.widget.NestedScrollView>-->

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btnReg"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="10sp"
        android:background="@drawable/btn_rounded"
        android:padding="10sp"
        android:text="@string/register_stmt"
        android:textAlignment="center"
        android:textColor="@color/white"
        android:textStyle="bold" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/txtRegAlreadyUser"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="15sp"
        android:layout_marginBottom="15sp"
        android:text="@string/already_user"
        android:textColor="@color/colorPrimary"
        android:textSize="18sp" />

</LinearLayout>


