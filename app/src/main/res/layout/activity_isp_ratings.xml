<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginTop="30sp"
    android:layout_marginBottom="30sp"
    android:gravity="center"
    android:orientation="vertical"
    android:weightSum="140"
    tools:context=".IspRatingsActivity">

    <RadioGroup
        android:id="@+id/RdoGrpType"
        android:layout_width="wrap_content"
        android:layout_height="0sp"
        android:layout_gravity="center"
        android:layout_marginHorizontal="5sp"
        android:layout_marginTop="5sp"
        android:layout_weight="10"
        android:gravity="start"
        android:orientation="horizontal">

        <RadioButton
            android:id="@+id/RdnBtnWiFi"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:buttonTint="@color/colorPrimary"
            android:fontFamily="monospace"
            android:onClick="checkType"
            android:text="WiFi"
            android:textSize="18sp"/>

        <RadioButton
            android:id="@+id/RdnBtnBroadBand"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:buttonTint="@color/colorPrimary"
            android:fontFamily="monospace"
            android:onClick="checkType"
            android:text="BroadBand"
            android:textSize="18sp"/>
        <RadioButton
            android:id="@+id/RdnBtnMobData"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:buttonTint="@color/colorPrimary"
            android:fontFamily="monospace"
            android:onClick="checkType"
            android:text="Mob-Data"
            android:textSize="18sp"/>
    </RadioGroup>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="0sp"
        android:layout_gravity="center"
        android:layout_marginTop="10sp"
        android:layout_weight="20"
        android:gravity="center">

        <TextView
            android:id="@+id/txtSpeed"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginHorizontal="20sp"
            android:fontFamily="monospace"
            android:gravity="center"
            android:text="Speed"
            android:textSize="18sp"/>

        <androidx.appcompat.widget.AppCompatRatingBar
            android:id="@+id/RbSpeed"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginTop="15sp"
            android:layout_marginBottom="15sp"
            android:layout_toRightOf="@+id/txtSpeed"
            android:numStars="5"
            android:stepSize="0.5"
            android:theme="@style/RatingBar"/>

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="0sp"
        android:layout_gravity="center"
        android:layout_marginTop="10sp"
        android:layout_weight="20"
        android:gravity="center">

        <TextView
            android:id="@+id/txtPrice"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginHorizontal="20sp"
            android:fontFamily="monospace"
            android:gravity="center"
            android:text="Price"
            android:textSize="18sp"/>

        <androidx.appcompat.widget.AppCompatRatingBar
            android:id="@+id/RbPrice"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginTop="15sp"
            android:layout_marginBottom="15sp"
            android:layout_toRightOf="@+id/txtPrice"
            android:numStars="5"
            android:stepSize="0.5"
            android:theme="@style/RatingBar"/>
    </RelativeLayout>


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="0sp"
        android:layout_gravity="center"
        android:layout_marginTop="10sp"
        android:layout_weight="20"
        android:gravity="center">

        <TextView
            android:id="@+id/txtService"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginHorizontal="20sp"
            android:fontFamily="monospace"
            android:gravity="center"
            android:text="Service"
            android:textSize="18sp"/>

        <androidx.appcompat.widget.AppCompatRatingBar
            android:id="@+id/RbService"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginTop="15sp"
            android:layout_marginBottom="15sp"
            android:layout_toRightOf="@+id/txtService"
            android:numStars="5"
            android:stepSize="0.5"
            android:theme="@style/RatingBar"/>
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="0sp"
        android:layout_gravity="center"
        android:layout_marginTop="10sp"
        android:layout_weight="20"
        android:gravity="center">

        <TextView
            android:id="@+id/txtOverallRating"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginHorizontal="20sp"
            android:fontFamily="monospace"
            android:gravity="center"
            android:text="Overall"
            android:textSize="18sp"/>

        <androidx.appcompat.widget.AppCompatRatingBar
            android:id="@+id/RbOverall"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginTop="15sp"
            android:layout_marginBottom="15sp"
            android:layout_toRightOf="@+id/txtOverallRating"
            android:numStars="5"
            android:stepSize="0.5"
            android:theme="@style/RatingBar"/>
    </RelativeLayout>

    <EditText
        android:id="@+id/txtFeedback"
        android:layout_width="match_parent"
        android:layout_height="0sp"
        android:layout_gravity="center"
        android:layout_marginHorizontal="40sp"
        android:layout_marginTop="10sp"
        android:layout_weight="15"
        android:gravity="bottom"
        android:hint="Feedback"/>

    <ProgressBar
        android:id="@+id/progBar"
        android:layout_width="wrap_content"
        android:layout_height="0sp"
        android:layout_gravity="center"
        android:layout_weight="10"
        android:visibility="gone"/>

    <Button
        android:id="@+id/btnSubmitReview"
        android:layout_width="wrap_content"
        android:layout_height="0sp"
        android:layout_gravity="center"
        android:layout_marginTop="10sp"
        android:layout_weight="10"
        android:background="@drawable/btn_rounded"
        android:text="@string/submit"
        android:textColor="@color/white"
        android:textStyle="bold"/>

</LinearLayout>


