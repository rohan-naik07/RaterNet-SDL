<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/parent"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:elevation="5sp"
    android:padding="10sp"
    app:cardBackgroundColor="@color/colorCard"
    app:cardCornerRadius="15sp"
    app:cardUseCompatPadding="true">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="15sp">

        <TextView
            android:id="@+id/ispText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10sp"
            android:text="@string/demoisp_text"
            android:textColor="@color/black"
            android:textSize="20sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/typeText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/ispText"
            android:layout_marginLeft="10sp"
            android:text="@string/demotype_text"
            android:textColor="@color/black"
            android:textSize="20sp" />

        <androidx.appcompat.widget.LinearLayoutCompat
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_below="@id/typeText">

            <TextView
                android:id="@+id/dateText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/typeText"
                android:layout_gravity="center|left"
                android:layout_marginLeft="10sp"
                android:text="@string/demodate_text"
                android:textColor="@color/colorPrimary"
                android:textSize="15sp" />

            <ImageButton
                android:id="@+id/deleteReview"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="10dp"
                android:background="@drawable/btn_rounded"
                android:layout_marginLeft="150dp"
                android:src="@drawable/ic_baseline_delete_24"
                />

        </androidx.appcompat.widget.LinearLayoutCompat>

    </RelativeLayout>



</androidx.cardview.widget.CardView>