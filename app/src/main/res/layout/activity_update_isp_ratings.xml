<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginTop="30sp"
    android:layout_marginBottom="30sp"
    android:gravity="center"
    android:orientation="vertical"
    android:weightSum="140"
    tools:context=".IspRatingsActivity">

    <TextView
        android:id="@+id/txtViewUpdateRatings"
        android:layout_width="match_parent"
        android:layout_height="0sp"
        android:layout_weight="15"
        android:layout_gravity="center"
        android:gravity="center"
        android:text="@string/update_ratings"
        android:textSize="25sp"
        android:textColor="@color/colorPrimary"
        android:textStyle="bold"
        android:fontFamily="monospace"
        android:layout_margin="5sp"/>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="0sp"
        android:layout_gravity="center"
        android:layout_marginTop="10sp"
        android:layout_weight="20"
        android:gravity="center">

        <TextView
            android:id="@+id/txtUpdateSpeed"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginHorizontal="20sp"
            android:fontFamily="monospace"
            android:gravity="center"
            android:text="Speed"
            android:textSize="18sp"/>

        <androidx.appcompat.widget.AppCompatRatingBar
            android:id="@+id/RbUpdateSpeed"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginTop="15sp"
            android:layout_marginBottom="15sp"
            android:layout_toRightOf="@+id/txtUpdateSpeed"
            android:numStars="5"
            android:stepSize="0.5"
            android:theme="@style/RatingBar"/>

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="0sp"
        android:layout_gravity="center"
        android:layout_marginTop="10sp"
        android:layout_weight="20"
        android:gravity="center">

        <TextView
            android:id="@+id/txtUpdatePrice"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginHorizontal="20sp"
            android:fontFamily="monospace"
            android:gravity="center"
            android:text="Price"
            android:textSize="18sp"/>

        <androidx.appcompat.widget.AppCompatRatingBar
            android:id="@+id/RbUpdatePrice"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginTop="15sp"
            android:layout_marginBottom="15sp"
            android:layout_toRightOf="@+id/txtUpdatePrice"
            android:numStars="5"
            android:stepSize="0.5"
            android:theme="@style/RatingBar"/>
    </RelativeLayout>


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="0sp"
        android:layout_gravity="center"
        android:layout_marginTop="10sp"
        android:layout_weight="20"
        android:gravity="center">

        <TextView
            android:id="@+id/txtUpdateService"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginHorizontal="20sp"
            android:fontFamily="monospace"
            android:gravity="center"
            android:text="Service"
            android:textSize="18sp"/>

        <androidx.appcompat.widget.AppCompatRatingBar
            android:id="@+id/RbUpdateService"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginTop="15sp"
            android:layout_marginBottom="15sp"
            android:layout_toRightOf="@+id/txtUpdateService"
            android:numStars="5"
            android:stepSize="0.5"
            android:theme="@style/RatingBar"/>
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="0sp"
        android:layout_gravity="center"
        android:layout_marginTop="10sp"
        android:layout_weight="20"
        android:gravity="center">

        <TextView
            android:id="@+id/txtUpdateOverallRating"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginHorizontal="20sp"
            android:fontFamily="monospace"
            android:gravity="center"
            android:text="Overall"
            android:textSize="18sp"/>

        <androidx.appcompat.widget.AppCompatRatingBar
            android:id="@+id/RbUpdateOverall"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginTop="15sp"
            android:layout_marginBottom="15sp"
            android:layout_toRightOf="@+id/txtUpdateOverallRating"
            android:numStars="5"
            android:stepSize="0.5"
            android:theme="@style/RatingBar"/>
    </RelativeLayout>

    <EditText
        android:id="@+id/txtUpdateFeedback"
        android:layout_width="match_parent"
        android:layout_height="0sp"
        android:layout_gravity="center"
        android:layout_marginHorizontal="40sp"
        android:layout_marginTop="10sp"
        android:layout_weight="15"
        android:gravity="bottom"
        android:hint="Feedback"/>

    <ProgressBar
        android:id="@+id/progBar2"
        android:layout_width="wrap_content"
        android:layout_height="0sp"
        android:layout_gravity="center"
        android:layout_weight="10"
        android:visibility="gone"/>

    <Button
        android:id="@+id/btnUpdateReview"
        android:layout_width="wrap_content"
        android:layout_height="0sp"
        android:layout_gravity="center"
        android:layout_marginTop="20sp"
        android:layout_weight="10"
        android:background="@drawable/btn_rounded"
        android:text="@string/update"
        android:textColor="@color/white"
        android:textStyle="bold"/>

</LinearLayout>